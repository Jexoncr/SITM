<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SITM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            background-color: #f4f8f5;
            color: #333;
        }

        .hero {
            background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url("https://riojarentacar.com/wp-content/uploads/2025/09/Conoce-San-Carlos-uno-de-los-lugares-mas-lindos-de-Costa-Rica.jpg");
            background-size: cover;
            background-position: center;
            height: 70vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: #fff;
            padding: 20px;
        }

            .hero h2 {
                font-size: 42px;
                margin-bottom: 15px;
                color: #ffffff;
            }

            .hero p {
                font-size: 18px;
                max-width: 600px;
                margin: auto;
                color: #ffffff;
            }

        section {
            padding: 60px 40px;
        }

            section h2 {
                text-align: center;
                margin-bottom: 40px;
                color: #1b7a5c;
            }

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
        }

        .card {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

            .card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .card-content {
            padding: 20px;
        }

            .card-content h3 {
                margin-bottom: 10px;
                color: #1b7a5c;
            }

        .eventos {
            background-color: #e6f3ee;
        }

        .evento {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 5px solid #1b7a5c;
            border-radius: 5px;
        }

        .cta {
            background-color: #1b7a5c;
            color: #fff;
            text-align: center;
            padding: 50px 20px;
        }

            .cta button {
                padding: 12px 25px;
                border: none;
                border-radius: 25px;
                background-color: #fff;
                color: #1b7a5c;
                font-size: 16px;
                cursor: pointer;
                font-weight: bold;
            }

        footer a i {
            transition: color 0.3s ease, transform 0.3s ease;
        }

        footer a:hover i {
            color: #66bb6a;
            transform: scale(1.2);
        }
        .navbar .nav-link {
            color: #eafaf5;
            transition: color 0.3s ease, transform 0.2s ease;
        }

            .navbar .nav-link:hover {
                color: #ffffff;
                transform: translateY(-2px);
            }

        .navbar .btn-light:hover {
            background-color: #e8f5e9;
        }

    </style>

</head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top"
         style="background: linear-gradient(90deg, #1b7a5c, #2e9e7f); box-shadow: 0 4px 10px rgba(0,0,0,0.15);">

        <div class="container-fluid px-4">

            <!-- LOGO / NOMBRE -->
            <a class="navbar-brand fw-bold fs-4" href="/Home/Index">
                 SITM
            </a>

            <!-- BOTÓN MÓVIL -->
            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSITM">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENÚ -->
            <div class="collapse navbar-collapse" id="navbarSITM">

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-lg-2">

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">Inicio</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Mapa">Mapa Turístico</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Eventos">Eventos</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Comercios">Comercios</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Resenas">Reseñas</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Perfil">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MisReservas">Mis Reservas</a>
                    </li>

                    <!-- BOTÓN DESTACADO -->
                    <li class="nav-item ms-lg-2">
                        <a class="btn btn-outline-light fw-semibold px-3"
                           href="/Home/Login">
                            <i class="fa-solid fa-right-from-bracket me-1"></i>
                            Cerrar sesión
                        </a>
                    </li>


                </ul>

            </div>
        </div>
    </nav>


    <!-- CONTENIDO -->
    <main class="my-0 mb-5">
        @RenderBody()
    </main>



    <!-- FOOTER -->
    <footer style="background-color:#1f2f46; color:#fff;">
        <div class="container py-5">

            <div class="row gy-4">

                <!-- Idioma y moneda -->
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Idioma</h6>
                    <select class="form-select mb-3">
                        <option>Español (Costa Rica)</option>
                        <option>English</option>
                    </select>

                    <h6 class="fw-bold mb-3">Moneda</h6>
                    <select class="form-select">
                        <option>Colón costarricense (₡)</option>
                        <option>Dólar americano ($)</option>
                    </select>
                </div>

                <!-- Asistencia -->
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Asistencia</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Contacto</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Información legal</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Política de privacidad</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Términos y condiciones</a></li>
                    </ul>
                </div>

                <!-- Empresa -->
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Municipalidad</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Sobre el SITM</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Turismo local</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Eventos</a></li>
                        <li><a href="#" class="text-white text-decoration-none">Comercios</a></li>
                    </ul>
                </div>

                <!-- Colaboradores -->
                <div class="col-md-3">
                    <h6 class="fw-bold mb-3">Colaboración</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white text-decoration-none">Afiliados</a></li>
                    </ul>
                </div>

            </div>

            <hr class="border-light my-4">

            <!-- Parte inferior -->
            <div class="d-flex gap-4">
                <a href="#" class="text-white fs-4 text-decoration-none">
                    <i class="fa-solid fa-globe"></i>
                </a>

                <a href="#" class="text-white fs-4 text-decoration-none">
                    <i class="fa-brands fa-facebook-f"></i>
                </a>

                <a href="#" class="text-white fs-4 text-decoration-none">
                    <i class="fa-brands fa-instagram"></i>
                </a>

                <a href="#" class="text-white fs-4 text-decoration-none">
                    <i class="fa-brands fa-x-twitter"></i>
                </a>
            </div>


        </div>
    </footer>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>


