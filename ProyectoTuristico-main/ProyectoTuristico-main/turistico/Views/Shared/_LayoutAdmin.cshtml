<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Administración SITM</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f8f5;
        }

        .sidebar {
            width: 260px;
            background-color: #1b7a5c;
            min-height: 100vh;
        }

            .sidebar a {
                color: #ffffff;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
                border-radius: 6px;
            }

                .sidebar a:hover {
                    background-color: rgba(255,255,255,0.15);
                }

        .header-admin {
            background-color: #ffffff;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
</head>
<body>

    <div class="d-flex">

        <!-- SIDEBAR -->
        <aside class="sidebar p-3">
            <h5 class="fw-bold mb-4">Administración SITM</h5>

            <nav class="d-flex flex-column gap-1">
                <a href="/Admin/Dashboard">Dashboard</a>
                <a href="/Admin/Comercios">Comercios</a>
                <a href="/Admin/Eventos">Eventos</a>
                <a href="/Admin/Resenas">Reseñas</a>

                <hr class="border-light my-3">
                <a href="/Home/Login" class="btn btn-outline-success btn-sm">
                    Cerrar sesión
                </a>


            </nav>
        </aside>

        <!-- CONTENIDO -->
        <div class="flex-fill d-flex flex-column">

            <!-- HEADER -->
            <!-- BODY -->
            <main class="flex-fill p-4">
                @RenderBody()
            </main>

        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
