@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<div class="d-flex justify-content-center align-items-center"
     style="min-height: 90vh; background-color:#f4f8f5;">

    <div class="card shadow-lg border-0" style="width: 420px; border-radius:15px;">
        <div class="card-body p-4">

            <!-- TÍTULO -->
            <div class="text-center mb-4">
                <h3 class="fw-bold text-success mb-1">SITM</h3>
                <p class="text-muted mb-0">Sistema de Información Turística Municipal</p>
            </div>

            <!-- FORMULARIO -->
            <form>

                <div class="mb-3">
                    <label class="form-label">Correo electrónico</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-envelope"></i>
                        </span>
                        <input type="email"
                               class="form-control"
                               placeholder="usuario@correo.com">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fa-solid fa-lock"></i>
                        </span>
                        <input type="password"
                               class="form-control"
                               placeholder="••••••••">
                    </div>
                </div>

                <!-- RECUPERAR CONTRASEÑA -->
                <div class="d-flex justify-content-end mb-3">
                    <a href="/Home/Recuperar"
                       class="text-success text-decoration-none small">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>
                <div class="d-flex justify-content-end mb-3">
                    <a href="/Home/Recuperar"
                       class="text-success text-decoration-none small">
                        Crear cuenta nueva
                    </a>
                </div>

                <!-- BOTÓN -->
                <div class="d-grid mb-3">
                    <a href="/Home/Index"
                       class="btn btn-success fw-semibold">
                        Ingresar
                    </a>
                </div>

            </form>

            <!-- PIE -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    Únete para descubrir lo mejor de SITM
                </small>
                <a href="/Admin/Dashboard"
                   class="btn btn-outline-success fw-semibold">
                    Ingresar como Administrador
                </a>
            </div>

        </div>
    </div>
</div>

